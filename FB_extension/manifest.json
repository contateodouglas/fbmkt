{
  "manifest_version": 3,
  "name": "Facebook Marketplace Auto Poster",
  "version": "1.0.11",
  "description": "Automatize postagens no Facebook Marketplace com agendamento e postagem em massa",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "alarms",
    "tabs",
    "notifications"
  ],
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://facebook.com/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/marketplace/*",
        "https://facebook.com/marketplace/*"
      ],
      "js": [
        "lib/utils.js",
        "content/human-automation.js",
        "content/marketplace-automation.js",
        "content/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Facebook Marketplace Auto Poster",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/images/*",
        "styles/*",
        "assets/icons/*"
      ],
      "matches": [
        "https://www.facebook.com/*",
        "https://facebook.com/*"
      ]
    }
  ]
}